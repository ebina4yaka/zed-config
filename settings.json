// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // General settings
  "inlay_hints": {
    "show_background": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_install_extensions": {
    "blade-runner-2049": true,
    "deno": true,
    "material-icon-theme": true,
    "zig": true,
    "scala": true,
    "proto": true,
    "lua": true,
    "toml": true,
    "dockerfile": true,
    "astro": true,
    "elixir": true,
    "elm": true,
    "github-actions": true,
    "everforest-theme": true,
    "live-server": true,
    "golangci-lint": true,
    "biome": true,
    "terraform": true,
    "dart": true,
    "flutter-snippets": true,
    "codebook": true,
    "make": true,
    "svelte": true,
    "git-firefly": true,
    "docker-compose": true
  },
  "autosave": "on_focus_change",
  "vim_mode": true,
  "base_keymap": "JetBrains",

  // UI settings (fonts, theme)
  "agent_buffer_font_size": 18,
  "ui_font_family": "Monaspace Krypton NF",
  "ui_font_size": 17.0,
  "theme": "Everforest Dark Hard",
  "icon_theme": "Material Icon Theme",
  "buffer_font_family": "Monaspace Krypton NF",
  "buffer_font_size": 16.5,
  "buffer_font_weight": 600.0,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true,
    "ss10": true
  },
  "terminal": {
    "font_size": 18.0,
    "font_family": "Monaspace Krypton NF",
    "font_features": {
      "calt": true,
      "liga": true,
      "ss01": true,
      "ss02": true,
      "ss03": true,
      "ss04": true,
      "ss05": true,
      "ss06": true,
      "ss07": true,
      "ss08": true,
      "ss09": true,
      "ss10": true
    }
  },
  "experimental.theme_overrides": {
    "background.appearance": "transparent",
    "background": "#000000AC",
    "editor.background": "#00000012",
    "editor.gutter.background": "#00000010",
    "title_bar.background": "#000000DF",
    "toolbar.background": "#00000010",
    "terminal.background": "#00000010",
    "status_bar.background": "#000000DF",
    "tab.active_background": "#000000",
    "tab.inactive_background": "#00000000",
    "tab_bar.background": "#00000010",
    "panel.background": "#00000000",
    "border": "#FFFFFF30",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.thumb.background": "#00000000",
    "scrollbar.thumb.border": "#FFFFFF90",
    "editor.active_line.background": "#00000010"
  },

  // AI settings
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.1-codex"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.1-codex"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5"
    },
    "model_parameters": []
  }
}
